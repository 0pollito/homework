extends ../layout

block content
      main(class='main')
        form(method='post', action='')
          div(class="header")
            h1 Registrar Usuario!
            h4 Rellenar los datos solicitados (todos los campos con * son obligatorios)
          div
            label
              span(class='required') Nombre: *
              input(type='text', name='nombre', value='', placeholder='Nombre', pattern='[A-Za-z]*',required='required', tabindex='1', autofocus='autofocus')
          div
            label
              span(class='required') Apellido Paterno: *
              input(type='text', name='ap', value='', placeholder='Apellido Paterno', pattern='[A-Za-z]*', tabindex='1', autofocus='autofocus')
          div
            label
              span(class='required') Apellido Materno: *
              input(type='text', name='am', value='', placeholder='Apellido Materno', pattern='[A-Za-z]*', tabindex='1', autofocus='autofocus')
          div
            label
              span Seleccione Area: *    
              select(name='area', tabindex='4')
                //-var areas = data
                -each value in data
                  option=value.nombre             
          //div
            label(name='areas')
              span(class='required') Areas: *
              input(id='areas',type='text', name='areas', value='', placeholder='areas', tabindex='2', required='required')
          //div
            label(name='sarea')
              span Seleccione Responsables: *     
              select(id='subject',name='subject', tabindex='4')
                //-var res = data[1]
                //-each value in res
                  option=value.nombre  
          div
            label
              span(class='required') Puesto: *
              input(type='text', name='puesto', pattern='[A-Za-z]*',value='', placeholder='Puesto', tabindex='2', required='required')
          div
            label
              span(class='required') e-mail: *
              input(type='email', name='email', value='', placeholder='jhon@example.com', tabindex='2', required='required')
          div
            label
              span(class='required') Telefono: *
              input(type='text', name='telefono', pattern='[0-9]{10}',value='', tabindex='2', required='required')    
          div.botns
            button(id='enviar',name='submit', type='submit') Aceptar
            button(id='cancelar',type='button', onclik='/usuario/') Cancelar
            

          
